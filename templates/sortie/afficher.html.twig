{% extends 'base.html.twig' %}

{% block body %}
    <div class="FlexInfoDateUser">
        <p>Date du jour : {{ "now" |date('d/M/Y') }}</p>
    </div>
    <div class="FlexInfoDateUser">
        <p>Participant : {{ app.user.nom }}</p>
    </div>
    <div>
        <h2>Filtrer les sorties</h2>
    </div>
    <div class="FlexSorties">
            <table>
                <thead>
                <tr>
                    <td>Nom de la sortie</td>
                    <td>Date de la sortie</td>
                    <td>Clôture</td>
                    <td>Inscrits/places</td>
                    <td>Etat</td>
                    <td>Inscrit</td>
                    <td>Organisateur</td>
                    <td>Actions</td>
                </tr>
                </thead>

                <tbody>
                {% for s in sorties %}
                <tr>
                    <td>{{ s.nom }}</td>
                    <td>{{ s.dateHeureDebut | date('d/M/Y h:m', false) }}</td> <!--TODO-->
                    <td>{{ s.dateLimiteInscription | date('d/M/Y') }}</td>
                    <td>{{ s.nbInscriptionsMax }}</td>
                    <td>{{ s.etat.libelle }}</td>
                    <td>...A continuer...</td>
                    <td>{{s.organisateur.nom}}</td>
                    <td>
                        <a href="{{ path('sortie_afficher') }}">Afficher</a>

                        {% if s.etat.libelle is same as("Ouverte") %}
                            <a href="{{ path('sortie_afficher') }}">S'inscrire</a>
                        {% endif %}

                        <a href="{{ path('sortie_afficher') }}">Se désister</a>

                        {% if app.user.id is same as(s.organisateur.id) %}
                            {% if s.etat.libelle is same as("En création") %}
                                 <a href="{{ path('sortie_afficher') }}">Publier</a>
                                <a href="{{ path('sortie_afficher') }}">Modifier</a>
                            {% endif %}
                            {% if s.etat.libelle is same as("Ouverte") %}
                                <a href="{{ path('sortie_afficher') }}">Annuler</a>
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
    </div>
{% endblock %}

{% block title %}
    Sortie | {{ parent() }}
{% endblock %}

