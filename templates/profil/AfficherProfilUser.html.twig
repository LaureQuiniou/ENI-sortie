{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block title %}Profil de {{ app.user.pseudo }} | {{ parent() }}{% endblock %}

{% block body %}
    <section>
        <h2>{{ app.user.pseudo }}</h2>
        <div class="div_profil">
            <div class="col-md-9">
                <div class="label-sortie"><label>Prénom : </label> {{ app.user.prenom }}</div>
                <div class="label-sortie"><label>Nom : </label> {{ app.user.nom }}</div>
                <div class="label-sortie"><label>Téléphone : </label> {{ app.user.telephone }}</div>
                <div class="label-sortie"><label>Email : </label> {{ app.user.email }}</div>
                <div class="label-sortie"><label>Campus : </label> {{ app.user.campus.nom }}</div>
            </div>

           <div class="col-md-3">
               {% if not app.user.photo is same as NULL %}
                     <img class="img_profil" src="{{ asset('img/Avatar/'~app.user.photo) }}">
               {% endif %}
           </div>
        </div>
        <a href="{{ path('sorties_afficher') }}"><button class="btn btn-lg btn-primary">Retour</button></a>
        <a href="{{ path('profil_modifier') }}"><button class="btn btn-lg btn-primary">Modifier</button></a>
    </section>

{% endblock %}
