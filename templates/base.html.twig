<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>{% block title %}ENI Sortir{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="icon" href="{{ asset('img/mini_logo.png')}}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>

        <header>
            <div class="container">
                <!--NAV.BARRE ET TITRE -->
                <div class="row">
                    <h1 class="col"><a href="{{ path('sortie_afficher') }}"><img src="{{ asset('img/logo.png') }}" alt="Logo"></a>Sortir.com</h1>
                    <ul class="nav justify-content-end col">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('sortie_afficher') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('profil') }}">Mon profil</a>
                        </li>
                        {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Enregistrer un nouvel utilisateur</a>
                        </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>



        <main>
            <div class="container">
                {# read and display all flash messages #}

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="container flash flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </main>

        <footer>
            <div class="container">
              <p>&copy {{ "now" |date('Y') }} Sortir avec l'ENI </p>
            </div>
        </footer>

    </body>
</html>
