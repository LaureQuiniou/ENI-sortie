{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}

 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('css/requestMdp.css') }}">
 {% endblock %}


{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="h1_mdp">Réinitialisation de mot de passe</h1>

    <div class="input_mdp">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}

            <small>
                Entrez votre adresse mail et on vous recevrez un lien pour réinitialiser votre mot de passe.
            </small>

        <button class="btn btn-primary" id="btn_mdp">Envoyer</button>
    </div>


    {{ form_end(requestForm) }}

{% endblock %}
