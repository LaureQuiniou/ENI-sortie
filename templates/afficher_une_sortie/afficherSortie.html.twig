{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/afficher_sortie.css') }}">
{% endblock %}

{% block title %}Sortie : "{{ sortie.nom }}" | {{ parent() }}{% endblock %}

{% block body %}
    <section>
        <h3>Détails de la sortie</h3>

        <div class="bloc">
        <div class="blocGauche" >
            <p>Nom de la sortie : {{ sortie.nom }}</p>
            <p>Date et heure de la sortie : {{ sortie.dateHeureDebut | date('d/M/Y h:m', false)}}</p>
            <p>Date limite d'inscription : {{ sortie.dateLimiteInscription | date('d/M/Y')}}</p>
            <p>Nombre de places : {{ sortie.nbInscriptionsMax }}</p>
            <p>Durée : {{ sortie.duree | date('h') }} h {{ sortie.duree | date('m') }} min</p>
            <p>Description et infos : {{ sortie.infosSortie }}</p>
        </div>
        <div class="blocDroit">
            <p>Campus : {{ sortie.organisateur.campus.nom }}</p>
            <p>Lieu : {{ sortie.lieu.nom }}</p>
            <p>Rue : {{ sortie.lieu.rue }}</p>
            <p>Code postal : {{ sortie.lieu.ville.codePostal }}</p>
            <p>Latitude : {{ sortie.lieu.latitude }}</p>
            <p>Longitude: {{ sortie.lieu.longitude }}</p>
        </div>
        </div>

        <div id="Liste_participants">
            <h5>Liste des participants inscrits :</h5>
        </div>
        <div class="scroller">
            <table>
                <thead class="en-tête">
                <tr>
                    <td>Pseudo</td>
                    <td>Nom</td>
                </tr>
                </thead>
                <tbody>
                {% for p in sortie.participants %}
                    <tr>
                        <td>{{ p.pseudo }}</td>
                        <td>{{ p.prenom }} {{ p.nom }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}